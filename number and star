 1******
 12*****
 123****
 1234***
 12345**
 123456*
 1234567
 
 import java.util.*;
public class Main {
    public static void main(String args[]) {
		Scanner scn =new Scanner(System.in);
		int n = scn.nextInt();
		printPattern(n);
    }
	public static void printPattern(int n){
		for(int i=1;i<=n;i++){
			for(int j=1;j<=i;j++)
			System.out.print(j);
			for(int j=n-i;j>0;j--)
			System.out.print("*");
			System.out.println();
		}
	}
}
